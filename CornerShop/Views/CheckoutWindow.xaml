<Window x:Class="CornerShop.Views.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CornerShop.Views"
        mc:Ignorable="d"
        Title="Checkout" Height="450" Width="700" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Your Shopping Cart" Grid.Column="0" Margin="0,0,20,0">
            <ListView ItemsSource="{Binding CartItems}" BorderThickness="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding ProductName}" FontWeight="Bold"/>
                                <TextBlock Text=" x " Foreground="Gray"/>
                                <TextBlock Text="{Binding Quantity}" Foreground="Gray"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="{Binding Price, StringFormat='{}{0} kr'}" Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </GroupBox>

        <StackPanel Grid.Column="1" VerticalAlignment="Center">

            <TextBlock Text="Select Currency:" Foreground="Gray" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding Currencies}" 
                      SelectedItem="{Binding SelectedCurrency}"
                      Height="30" Margin="0,0,0,20" FontSize="14" FontWeight="Bold"/>

            <TextBlock Text="Total Amount:" Foreground="Gray" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding DisplayTotal}" 
                       FontSize="32" FontWeight="Bold" Foreground="#2ecc71" 
                       HorizontalAlignment="Right" Margin="0,0,0,20"/>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20">

                <TextBlock Text="{Binding OriginalPriceDisplay}" 
               Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVis}}"
               Foreground="Gray" 
               TextDecorations="Strikethrough" 
               HorizontalAlignment="Right"/>

                <TextBlock Text="{Binding DiscountDisplay}" 
               Visibility="{Binding HasDiscount, Converter={StaticResource BoolToVis}}"
               Foreground="Red" 
               HorizontalAlignment="Right"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Total: " FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="{Binding DisplayTotal}" FontSize="24" FontWeight="Bold" Foreground="Green"/>
                </StackPanel>

            </StackPanel>



            <Button Content="Pay Now" Click="Pay_Click"
                    Height="40" Background="#3498db" Foreground="White" 
                    FontSize="16" FontWeight="Bold" Cursor="Hand"/>

            <TextBlock Text="{Binding Message}" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
